/**
 * @class SerializableSD<{{ serializable.name }}>
 * @brief Serializer/deserializer for {{ serializable.name }}.
 */
template <>
class SerializableSD<{{ serializable.name }}> {
public:
    SerializableSD() = default;
    ~SerializableSD() {}
    SerializableSD(const SerializableSD&) = delete;
    SerializableSD(SerializableSD&&) = delete;
    SerializableSD& operator=(const SerializableSD&) = delete;
    SerializableSD& operator=(SerializableSD&&) = delete;

    using ObjType = {{ serializable.name }};

    /**
     * @brief Serialize.
     *
     * @tparam ParserDataType The type of the data.
     * @param p_key The key to insert into p_data.
     * @param p_data The data to insert result.
     * @param p_serializable The object to serialize.
     */
    template <typename ParserDataType>
    static void serialize(ParserDataType& p_data, const ObjType& p_serializable) {
        {% for extended_parent in serializable.extended_parents %}
        SerializableSD<{{ extended_parent }}>::serialize(p_data, p_serializable);
        {% endfor %}
        ParserDataType result;
        {% for field in serializable.fields %}
        SerializableSD<decltype(p_serializable.{{ field.name }})>::serialize(result, p_serializable.{{ field.name }});
        p_data.set_value("{{ field.name }}", result);
        result = ParserDataType();
        {% endfor %}
    }

    /**
     * @brief Deserialize.
     *
     * @tparam ParserDataType The type of the data.
     * @param p_data The data to retrieve value from.
     * @param p_serializable The object to deserialize.
     */
    template <typename ParserDataType>
    static void deserialize(const ParserDataType& p_data, ObjType& p_serializable) {
        {% for extended_parent in serializable.extended_parents %}
        SerializableSD<{{ extended_parent }}>::deserialize(p_data, p_serializable);
        {% endfor %}
        {% for field in serializable.fields %}
        if (p_data.contains("{{ field.name }}")) {
            SerializableSD<decltype(p_serializable.{{ field.name }})>::deserialize(
                p_data.template get_value<ParserDataType>("{{ field.name }}"), p_serializable.{{ field.name }});
        }
        {% endfor %}
    }
};
