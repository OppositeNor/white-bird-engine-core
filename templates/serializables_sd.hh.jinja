/**
 * @class SerializableSD
 * @brief Serializer/deserializer for vector types.
 * @tparam T The type to serialize/deserialize.
 */
template <typename T>
class SerializableSD<std::vector<T>> {
public:

    using ObjType = std::vector<T>;

    /**
     * @brief Serialize.
     *
     * @param p_key The key to insert into p_data.
     * @param p_data The data to insert result.
     * @param p_serializable The object to serialize.
     */
    template <typename ParserDataType>
    static void serialize(ParserDataType& p_data, const ObjType& p_serializable) {
        std::vector<ParserDataType> result;
        result.reserve(p_serializable.size());
        for (auto& val : p_serializable) {
            ParserDataType val_data;
            SerializableSD<T>::serialize(val_data, val);
            result.push_back(val_data);
        }
        p_data.set(result);
    }

    /**
     * @brief Deserialize.
     *
     * @param p_serializable The object to deserialize.
     */
    template <typename ParserDataType>
    static void deserialize(const ParserDataType& p_data, ObjType& p_serializable) {
        p_serializable.clear();
        auto data_vector = p_data.template get<std::vector<ParserDataType>>();
        for (auto& data : data_vector) {
            T result;
            SerializableSD<T>::deserialize(data, result);
            p_serializable.push_back(result);
        }
    }

};

